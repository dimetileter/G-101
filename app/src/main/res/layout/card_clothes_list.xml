<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/bg_clothes_list"
    android:gravity="center_vertical">

    <!-- Ä°mage -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_clothes"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <!-- Text Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingVertical="8dp"
        android:orientation="vertical">

        <!-- Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/G101.Text.List_Title"/>

        <!-- Description Text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_subtitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/G101.Text.Description_Title"/>
    </LinearLayout>

    <!-- Icon and Colors -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:iconTint="@color/dark"
            app:icon="@drawable/state_favorite_ic_heart"
            style="@style/Widget.Material3.Button.IconButton"/>

        <!-- Color dots -->

    </LinearLayout>

</LinearLayout>