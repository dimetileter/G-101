<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context=".ui.categories.CategoriesDetailPage">

    <!-- Blur Target -->
    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/blur_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- İçerik -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_64dp"
                android:paddingBottom="@dimen/_20dp"
                android:orientation="vertical">

                <!-- Product image and group button -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:paddingTop="@dimen/_8dp"
                    android:paddingBottom="@dimen/_8dp">

                    <!-- Product Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_product_image"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:adjustViewBounds="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/shoe_large"
                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"/>

                    <!-- Vertical Segmented Button Bar -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6dp"
                        android:background="@drawable/bg_segmented_vertical_button_bar"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_6dp"
                        android:paddingTop="@dimen/_6dp"
                        android:paddingEnd="@dimen/_6dp"
                        android:paddingBottom="@dimen/_6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_product_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/img_product_image">

                        <!-- Top and first button -->
                        <include
                            android:id="@+id/top_button"
                            layout="@layout/btn_segmented_vertical_button" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_3dp" />

                        <!-- Middle and second button -->
                        <include
                            android:id="@+id/mid_button"
                            layout="@layout/btn_segmented_vertical_button" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_3dp" />

                        <!-- Bottom and third button -->
                        <include
                            android:id="@+id/bottom_button"
                            layout="@layout/btn_segmented_vertical_button" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Title and Description bar -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_16dp"
                    android:paddingEnd="@dimen/_16dp"
                    android:paddingTop="@dimen/_8dp"
                    android:paddingBottom="@dimen/_8dp">

                    <!-- Brand -->
                    <LinearLayout
                        android:id="@+id/ll_brand"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ll_model">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.List_Title"
                            android:text="@string/brand"
                            android:textAlignment="center"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_brand_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.Light_Text"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="@dimen/_16sp"
                            android:textAlignment="center"
                            android:text="Exmp:Nike"/>
                    </LinearLayout>

                    <!-- Model -->
                    <LinearLayout
                        android:id="@+id/ll_model"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/ll_brand"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ll_season">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.List_Title"
                            android:text="@string/model"
                            android:textAlignment="center"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_model_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.Light_Text"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="@dimen/_16sp"
                            android:textAlignment="center"
                            android:text="Exmp:Spor"/>
                    </LinearLayout>

                    <!-- Season -->
                    <LinearLayout
                        android:id="@+id/ll_season"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/ll_model"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ll_category">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.List_Title"
                            android:text="@string/season"
                            android:textAlignment="center"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_season_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.Light_Text"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="@dimen/_16sp"
                            android:textAlignment="center"
                            android:text="Exmp:Spring"/>
                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/ll_season"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.List_Title"
                            android:text="@string/category"
                            android:textAlignment="center"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txt_category_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/G101.Text.Light_Text"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="@dimen/_16sp"
                            android:textAlignment="center"
                            android:text="Exmp:Shoe"/>
                    </LinearLayout>

                    <!-- Chain -->
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- Divider -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_03dp"
                    app:dividerColor="@color/outline_stroke"/>

                <!-- General Characteristics -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48dp"
                    style="@style/G101.Text.Header"
                    android:text="@string/general_characteristics" />

                <!-- Color input -->
                <include
                    android:id="@+id/card_dropdown_color"
                    layout="@layout/card_dropdown_item"/>

                <!-- Size input -->
                <include
                    android:id="@+id/card_dropdown_size"
                    layout="@layout/card_dropdown_item"/>

                <!-- Material input -->
                <include
                    android:id="@+id/card_dropdown_material"
                    layout="@layout/card_dropdown_item"/>

                <!-- Product Code input -->
                <include
                    android:id="@+id/card_dropdown_product_code"
                    layout="@layout/card_dropdown_item"/>

                <!-- Barcode input -->
                <include
                    android:id="@+id/card_dropdown_barcode"
                    layout="@layout/card_dropdown_item"/>

                <!-- Tags -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48dp"
                    style="@style/G101.Text.Header"
                    android:text="@string/tags" />

                <!-- Tag input -->
                <include
                    android:id="@+id/card_dropdown_tag"
                    layout="@layout/card_dropdown_item"/>

                <!-- Description -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48dp"
                    style="@style/G101.Text.Header"
                    android:text="@string/description" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_126dp"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    style="@style/G101.Cards">

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </eightbitlab.com.blurview.BlurTarget>

    <!-- Blur View -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurOverlayColor="@color/blurview_overlay_color">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_4dp"
            android:paddingStart="@dimen/_4dp"
            android:background="@color/transparent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/G101.Appbar.Titled"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_64dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                app:menu="@menu/app_bar_delete_buton"
                app:navigationIcon="@drawable/ic_left_arrow">

                <!-- Title -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_clothing_name"
                    style="@style/G101.Text.Second_Title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4dp"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:ellipsize="end"
                    android:maxLines="1" />



            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>
    </eightbitlab.com.blurview.BlurView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>