<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled State-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/unskipable_segmented_button"/>
            <corners android:radius="@dimen/_54dp"/>
        </shape>
    </item>

    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_segmented_button"/>
            <corners android:radius="@dimen/_54dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/unselected_segmented_button"/>
            <corners android:radius="@dimen/_54dp"/>
        </shape>
    </item>

</selector>