<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center|start"
    android:background="@drawable/bg_segmented_horizontal_button_bar"
    android:paddingHorizontal="6dp"
    android:paddingVertical="6dp">

    <ImageButton
        android:id="@+id/btn_segmented_next_button"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:background="@drawable/state_segmented_next_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clipToOutline="true"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_next_arrow_right"
        android:tooltipText="@string/next"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>