<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Onboarding card style -->
    <style name="G101.Cards.OnboardingCards" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
    </style>

    <!--
        TEXT STYLES

        - Big Titles
        - Regular Text
        - Second Title
        - Hedaer
        - List Title
        - Description Title
        - Navigation Bar Label
    -->

    <!--Big Titles-->
    <style name="G101.Text.Big_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!--Regular Text-->
    <style name="G101.Text.Regular_Text" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Second Title-->
    <style name="G101.Text.Second_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="paddingStart">16dp</item>
    </style>

    <!--Hedaer-->
    <style name="G101.Text.Header" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">13sp</item>
        <item name="paddingStart">32dp</item>
    </style>

    <!--List Title-->
    <style name="G101.Text.List_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!--Description Title-->
    <style name="G101.Text.Description_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/description_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!--NavBar Text-->
    <style name="G101.Text.NavigationBar_Label" parent="" >
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/navbar_label</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!--
