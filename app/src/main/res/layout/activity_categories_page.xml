<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_background"
    tools:context=".ui.categories.CategoriesPageActivity">

    <!-- Blur Target -->
    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/blur_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="64dp">

        <!-- Scroll View -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <!-- Filter bar -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <!-- Chip group -->
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:paddingStart="16dp"
                        tools:ignore="RtlSymmetry"
                        app:singleLine="true"
                        app:singleSelection="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:chipSpacing="8dp">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="filtreler"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipIconEnabled="true"
                            app:chipIconTint="@color/dark"
                            app:checkedIconEnabled="false"
                            app:chipIconVisible="true"
                            app:chipIcon="@drawable/state_categories_popmenu_button"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kış"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yaz"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sonbahar"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="İlkbahar"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marka"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="filtreler"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="filtreler"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="filtreler"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="filtreler"
                            style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="filtreler"
                            style="@style/Widget.Material3.Chip.Filter"/>
                        
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <!-- Ad Banner -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                    android:src="@drawable/banner_ad_mob"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </eightbitlab.com.blurview.BlurTarget>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_view_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurOverlayColor="@color/blurview_overlay_color">

        <!-- Appbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/transparent"
                app:navigationIcon="@drawable/ic_left_arrow"
                app:menu="@menu/appbar_btn_categories_appbar_help">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_category_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shoe"
                    android:scaleType="center"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    style="@style/G101.Text.Second_Title"
                    android:text="Ayakkabı"
                    android:layout_gravity="center" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btn_pop_menu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.Material3.Button.IconButton.Outlined"
                    android:src="@drawable/state_categories_popmenu_button"
                    android:scaleType="center"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
                    android:layout_gravity="center" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </eightbitlab.com.blurview.BlurView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>