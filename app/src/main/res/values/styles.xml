<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        CARD STYLES

         - Onboarding Cards
         - NavigationBar Cards
         - List Cards
         - Dropdown List Cards
         - Banners
     -->

    <!-- Main Card -->
    <style name="G101.Cards" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Onboarding Cards -->
    <style name="G101.Cards.OnboardingCards" parent="G101.Cards">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
    </style>

    <!-- NavigationBar Cards -->
    <style name="G101.Cards.NavigationBarCard" parent="G101.Cards">
        <item name="cardCornerRadius">60dp</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="strokeWidth">1.3dp</item>
        <item name="strokeColor">@color/navbar_outline_stroke</item>
    </style>

    <!-- Categories Cards -->
    <style name="G101.Cards.CategoriesCard" parent="G101.Cards">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="strokeColor">@color/outline_stroke</item>
        <item name="strokeWidth">0.3dp</item>
        <item name="android:checkable">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Banners -->
    <style name="G101.Cards.Banner" parent="G101.Cards">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <!-- Clothes Input Cards -->
    <style name="G101.Cards.InputCards" parent="G101.Cards">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>

    <!--
        TEXT STYLES

        - Big Titles
        - Regular Text
        - Second Title
        - Hedaer
        - List Title
        - Description Title
        - Navigation Bar Label
    -->

    <!--Big Titles-->
    <style name="G101.Text.Big_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!--Regular Text-->
    <style name="G101.Text.Regular_Text" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Regular Text Extra light-->
    <style name="G101.Text.Light_Text" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nunito_extralight</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Second Title-->
    <style name="G101.Text.Second_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <!--Hedaer-->
    <style name="G101.Text.Header" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!--List Title-->
    <style name="G101.Text.List_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Description Title-->
    <style name="G101.Text.Description_Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/description_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--NavBar Text-->
    <style name="G101.Text.Lato_Regular" parent="" >
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/navbar_label</item>
        <item name="android:textSize">12sp</item>
    </style>
    

    <!--
        NAVIGATION BAR

        - Navigation Bar
        - Navigation Bar Active Indicator
   -->

    <!-- Navigation Bar -->
    <style name="G101.BottomNavigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">64dp</item>
        <item name="itemPaddingTop">6dp</item>
        <item name="itemPaddingBottom">6dp</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/navbar_ic_color_state</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemActiveIndicatorStyle">@style/G101.BottomNavigationBar.ActiveIndicatorStyle</item>
    </style>

    <!-- Active IndÄ±cator-->
    <style name="G101.BottomNavigationBar.ActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/app_theme_primary</item>
    </style>


    <!--
        APPBAR
        - Titled Appbar
    -->
    <!-- Appbar -->
    <style name="G101.Appbar" parent="Widget.Material3.CollapsingToolbar">
        <item name="titleTextColor">@color/dark</item>
        <item name="elevation">0dp</item>
        <item name="navigationIconTint">@color/dark</item>
    </style>
    
    <!-- Appbar Titled -->
    <style name="G101.Appbar.Titled" parent="G101.Appbar">
        <item name="titleTextAppearance">@style/G101.Appbar.TitleAppearance</item>
        <item name="background">@color/transparent</item>
    </style>

    <!-- Titled Appbar Text Appearance -->
    <style name="G101.Appbar.TitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


    <!--
        SEARCH BAR
        - Multiple Search Bar Left Icon
    -->

    <style name="G101.Searchbar" parent="Widget.Material3.SearchBar">
        <item name="android:hint">@string/search_here</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:outlineSpotShadowColor">@color/black</item>
        <item name="hintTextColor">@color/header_text</item>
        <item name="android:textColor">@color/dark</item>
        <item name="cornerFamily">rounded</item>
        <item name="backgroundTint">@color/card_background</item>
        <item name="android:textAppearance">@style/G101.Searchbar</item>
    </style>

    <!-- Mulitple Searchbar Text Appearance -->
    <style name="G101.Searchbar.TextAppearance" parent="TextAppearance.Material3.SearchBar">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--
        CHIPS
         - Filter Chip
         - Filter Chip Menu
         -
         -
    -->

    <!-- Main Chip -->
    <style name="G101.Chips" parent="@style/Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/dark</item>
        <!-- <item name="chipStrokeColor">@color/app_theme_intense</item> -->
    </style>

    <style name="G101.Chips.MainFilter" parent="G101.Chips">
        <item name="android:checkable">false</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIcon">@drawable/outline_filter_list_24</item>
        <item name="chipIconTint">@color/dark</item>
    </style>

    <!--
        SEGMENTED BUTTONS AND BARS
        - Segmented button bar
        -
        -
        -
    -->

    <!-- Segmented button bar -->
    <style name="G101.Layout.SegmentedButtonBar" parent="" >
        <item name="android:paddingStart">@dimen/_6dp</item>
        <item name="android:paddingEnd">@dimen/_6dp</item>
        <item name="android:paddingTop">@dimen/_6dp</item>
        <item name="android:paddingBottom">@dimen/_6dp</item>
        <item name="android:background">@drawable/bg_segmented_button_bar</item>
    </style>


    <!--
